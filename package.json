{
  "name": "@omicronenergy/oscd-shell",
  "version": "0.0.9",
  "description": "The shell component of OpenSCD, where plugins are loaded and the application is initialized.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OMICRONEnergyOSS/oscd-shell.git"
  },
  "keywords": [
    "scl",
    "xml",
    "iec",
    "61850",
    "iec61850",
    "scd",
    "omicronenergy"
  ],
  "author": "OMICRON Electronics GmbH",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OMICRONEnergyOSS/oscd-shell/issues"
  },
  "homepage": "https://github.com/OMICRONEnergyOSS/oscd-shell#readme",
  "type": "module",
  "exports": {
    ".": "./dist/foundation.js",
    "./oscd-shell.js": "./dist/oscd-shell.js"
  },
  "files": [
    "/dist/",
    "!/dist/*.spec.*",
    "!/dist/*.test.*"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "extract": "lit-localize extract",
    "localize": "lit-localize build",
    "copy-demo": "cp -r ./demo ./dist/",
    "build": "rimraf dist && mkdir dist && npm run copy-demo && npm run extract && npm run localize && npm run analyze -- --exclude dist && tsc ",
    "bundle": "rimraf dist && npm run localize && rollup -c rollup.config.js",
    "start": "npm run build && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"chokidar './demo/**/*' -c 'npm run copy-demo'\" \"wds --hmr --node-resolve\"",
    "start:bundle": "npm run bundle && concurrently -k -r \"rollup -c rollup.config.js --watch\" \"wds --watch \"",
    "test": "npm run build && wtr --coverage --group unit",
    "test:watch": "npm run build && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --coverage --watch --group unit\"",
    "analyze": "cem analyze --litelement --exclude demo/* --exclude dist/* --exclude *.spec.ts --exclude *.test.ts --exclude coverage/*",
    "doc": "npm run analyze -- --exclude dist && typedoc --out dist/doc oscd-shell.ts foundation.ts",
    "test:visual": "npm run build && wtr --group visual",
    "test:update": "npm run build && wtr --group visual --update-visual-baseline",
    "deploy": "npm run bundle && npm run doc && gh-pages --dist 'dist'",
    "prepare": "husky"
  },
  "dependencies": {
    "@lit/localize": "^0.12.2",
    "@omicronenergy/oscd-background-editv1": "^0.0.6",
    "@omicronenergy/oscd-editor": "^1.7.1",
    "@omicronenergy/oscd-menu-commons": "^0.0.1",
    "@omicronenergy/oscd-menu-open": "^0.0.6",
    "@omicronenergy/oscd-menu-save": "^0.0.2",
    "@omicronenergy/oscd-test-utils": "^0.0.8",
    "@omicronenergy/oscd-ui": "^0.0.9",
    "@open-wc/scoped-elements": "^3.0.6",
    "@openscd/oscd-api": "^0.1.4",
    "@webcomponents/scoped-custom-element-registry": "^0.0.10",
    "lit": "^3.3.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@custom-elements-manifest/analyzer": "^0.10.5",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@lit/localize-tools": "^0.8.0",
    "@open-wc/dev-server-hmr": "^0.2.0",
    "@open-wc/eslint-config": "^13.0.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@ungap/structured-clone": "^1.3.0",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-polyfill": "^1.0.6",
    "@web/rollup-plugin-html": "^2.3.0",
    "@web/rollup-plugin-import-meta-assets": "^2.3.0",
    "@web/test-runner": "0.20.2",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "0.11.1",
    "@web/test-runner-visual-regression": "0.9.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-wc": "^3.0.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.49.0",
    "rollup-plugin-copy": "^3.5.0",
    "sinon": "^21.0.0",
    "tsdoc": "^0.0.4",
    "typedoc": "^0.28.11",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "@web/test-runner-playwright": {
      "playwright": "1.54.1"
    }
  },
  "customElements": "custom-elements.json",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "eslint"
    ]
  }
}
